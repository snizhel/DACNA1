@model IEnumerable<QuanLyPhongKham3.Models.MedicineType>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách các loại thuốc</h2>

<p>
    @Html.ActionLink("Thêm loại thuốc", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Tên loại thuốc")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Thông tin loại thuốc", "Details", new { id=item.ID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
