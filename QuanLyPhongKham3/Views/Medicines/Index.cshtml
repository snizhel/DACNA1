@model IEnumerable<QuanLyPhongKham3.Models.Medicine>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách thuốc</h2>

<p>
    @Html.ActionLink("Thêm thuốc mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Tên thuốc")
        </th>
        <th>
            @Html.Label("Đơn vị tính")
        </th>
        <th>
            @Html.Label("Số lượng")
        </th>
        <th>
            @Html.Label("Giá thu vào")
        </th>
        <th>
            @Html.Label("Giá bán ra")
        </th>
        <th>
            @Html.Label("Loại thuốc")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MedicineType.Name)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Thông tin thuốc", "Details", new { id=item.ID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
