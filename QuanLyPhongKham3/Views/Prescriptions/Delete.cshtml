@model QuanLyPhongKham3.Models.Prescription

@{
    ViewBag.Title = "Delete";
}



<h3>Bạn có muốn xóa toa thuốc này?</h3>
<div>
    <h4>Prescription</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Ngày lập toa")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfCreate)
        </dd>

        <dt>
            @Html.Label("Trạng thái")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.Label("Tên bệnh nhân")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>

        <dt>
            @Html.Label("Tên thuốc")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Medicine.Name)
        </dd>

        <dt>
            @Html.Label("Người lập toa")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Staff.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại danh sách toa thuốc", "Index")
        </div>
    }
</div>
